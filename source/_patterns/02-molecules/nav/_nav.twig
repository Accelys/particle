  {% set nav_element = nav_element ?: 'nav' %}
  {% set nav_id = nav_id ? 'id="' ~ nav_id ~ '"' %}
  {% set nav_role = nav_role ? 'role="' ~ nav_role ~ '"' %}

  {% set other_classes = other_classes ?: other_classes %}

  {% set classes = [
    'nav',
    nav_alignment ? 'justify-content-' ~ nav_alignment,
    nav_vertical ? 'flex-column',
    nav_tabs ? 'nav-tabs',
    nav_pill ? 'nav-pills',
    nav_fill ? 'nav-fill',
    nav_justified ? 'nav-justified',
  ] | join(' ') ~ other_classes %}

<{{ nav_element }} class="{{ classes }}" {{ nav_id }} {{ nav_role }}>
  {% for item in nav_items %}
    {% include '@atoms/nav-item/_nav-item.twig' with item %}
    {#<pre>{{ dump(item) }}</pre>#}
  {% endfor %}
  {#<pre>{{ dump(classes) }}</pre>#}
</{{ nav_element }}>



