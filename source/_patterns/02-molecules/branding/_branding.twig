{#
/**
 * Block - Branding.
 *
 * url: String: the url the block directs to.
 * inline: Boolean: Inline SVG or Src image.
 * site_logo: Array: the inline or imgSrc logo.
 * site_name: String: the site name provided by the app.
 * site_slogan: String: the site slogan provided by the app.
 *
 */
#}

{# Default State: Set in Drupal. #}
{% if not brandingBlock %}
  {% set brandingBlock = {
    url: '#',
    inline: inline,
    site_logo: {
      svg: { svgpath: '@atoms/image/logo.svg' },
      imgSrc: { src: paths.assets ~ '/logo.svg', imageStyleName: 'thumbnail' }
    },
    site_name: 'My Site Title'|t,
    site_slogan: 'My site slogan of six words'|t,
  } %}
{% endif %}

<aside class="branding">
  {% if brandingBlock.site_logo %}
    <div class="branding__site-logo">
      <a href="{{ brandingBlock.url }}" title="{{ 'Home'|t }}" rel="home">

        {# provide inline src vs imgSrc #}
        {% if brandingBlock.inline %}
          {% include '@atoms/image/_svg.twig' with brandingBlock.site_logo.svg %}
        {% else %}
          {% include "@atoms/_image.twig" with brandingBlock.site_logo.imgSrc %}
        {% endif %}

      </a>
    </div>
  {% endif %}

  {% if brandingBlock.site_name %}
    <h2 class="branding__site-name">
      <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">{{ brandingBlock.site_name }}</a>
    </h2>
  {% endif %}

  {% if site_slogan %}
    <h6 class="branding__site-slogan">{{ brandingBlock.site_slogan }}</h6>
  {% endif %}
</aside>
