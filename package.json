{
  "name": "PatternLabStarter",
  "version": "10.0.0",
  "description": "Pattern Lab Starter",
  "main": "gulpfile.js",
  "license": "GPL-2.0",
  "author": {
    "name": "Evan Lovely",
    "url": "https://github.com/EvanLovely"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:phase2/pattern-lab-starter.git"
  },
  "keywords": [
    "pattern-lab",
    "prototyping"
  ],
  "scripts": {
    "start": "gulp",
    "compile": "NODE_ENV=production gulp compile",
    "test": "gulp validate",
    "gulp": "gulp",
    "update": "npm update && cd pattern-lab && composer update",
    "new": "yo ./scripts/new-component/index.js",
    "setup": "cd pattern-lab && composer install --no-interaction --ignore-platform-reqs",
    "postinstall": "find node_modules/ -name \"*.info\" -type f -delete",
    "webpack-pl": "webpack --display-entrypoints --config webpack.pl.config.js",
    "webpack-drupal": "webpack --display-entrypoints --config webpack.drupal.config.js",
    "webpack-dev-server": "webpack-dev-server --open"
  },
  "dependencies": {
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "holderjs": "^2.9.4",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "p2-theme-core": "github:phase2/p2-theme-core#epic/v10",
    "rc": "^1.2.0",
    "sass-loader": "^6.0.6",
    "webpack": "^3.4.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.0",
    "lodash.includes": "^4.1.3",
    "stylelint-scss": "^1.4.3",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0",
    "yeoman-generator": "^0.23.3",
    "yo": "^1.8.3"
  }
}
