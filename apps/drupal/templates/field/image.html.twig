{#
/**
 * @file
 * Theme override of an image.
 *
 * Available variables:
 * - attributes: HTML attributes for the img tag.
 * - style_name: (optional) The name of the image style applied.
 *
 * @see template_preprocess_image()
 */
#}

{# Array must be named `class` to work with PL #}
{# Options on Bootstrap for Styles: https://getbootstrap.com/docs/4.0/content/images/ #}
{% set class = [
  'mb-5',
  'img',
  'img-fluid',
  'rounded-circle',
  style_name ? style_name
] | join(' ') | trim %}

{% include "@atoms/_image.twig" with {
  img: {
    src: attributes.src,
    alt: attributes.alt,
    width: attributes.width,
    height: attributes.height,
    typeof: attributes.typeof,
  }
} %}
